<form class="form-horizontal">

  <div class="form-group">
    <label for="title" class="col-md-2 control-label">Name</label>
    <div class="col-md-5">
      {{input name="title" value=title class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-md-2 control-label">Description</label>
    <div class="col-md-5">
      {{input name="description" value=description class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="city" class="col-md-2 control-label">City</label>
    <div class="col-md-5">
      {{input name="city" value=city class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="propertyType" class="col-md-2 control-label">Property Type</label>
    <div class="col-md-5">
      {{input name="propertyType" value=propertyType class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="bedrooms" class="col-md-2 control-label">Bedrooms</label>
    <div class="col-md-5">
      {{input name="bedrooms" value=bedrooms class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="image" class="col-md-2 control-label">Image URL</label>
    <div class="col-md-5">
      {{input name="image" value=image class="form-control"}}
    </div>
  </div>

  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button {{action "create"}} class="button btn btn-sm btn-primary">Save</button>
   </div>
 </div>
</form>
